<div class="container mt-5">
  <div class="col d-flex justify-content-center">
    <h2 class="mb-4">Routes</h2>
  </div>

  <% if @routes.present? %>
    <div class="row">
      <% @routes.each do |route| %>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card" style="background-color: rgba(239, 91, 91)">
            <div class="card-body">
              <h5 class="card-title">Agency: <%= route.agency_name %></h5>
              <p class="card-text">
                Route: <%= route.route_short_name %> <br>
                Headsign: <%= route.headsign %> <br>
                Start Time: <%= Time.at(route.start_time).strftime("%B %e, at %I:%M %p") %> <br>
                End Time: <%= Time.at(route.end_time).strftime("%B %e, at %I:%M %p") %> <br>
                <% if route.global_route_id.present? %>
                  <%= link_to "Stop Details", market_route_path(params[:market_id], route.global_route_id), class: 'btn btn-primary' %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="col d-flex justify-content-center">
      <h1>No routes found</h1>
    </div>
  <% end %>
</div>
