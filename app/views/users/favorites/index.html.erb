<div class="container mt-5">
  <h1 class="mb-4">Favorite Markets</h1>

  <% if @favorite_markets[:data].present? %>
    <ul class="list-group mb-4">
      <% @favorite_markets[:data].each do |market| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <%= link_to market[:attributes][:name], market_path(market[:id]) %>
          <%= button_to 'Remove from Favorites', remove_from_favorites_market_path(market[:id]), method: :delete, class: 'btn btn-danger btn-sm' %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No favorite markets found.</p>
  <% end %>

  <%= link_to "Find More Markets", markets_search_path, class: 'btn btn-primary' %>
</div>
