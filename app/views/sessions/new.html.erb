<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center foodhaven-heading">FoodHaven</h1>
      <h2 class="text-center mb-4">Login Page</h2>
      <div id="login_form">
        <%= form_with url: login_path, method: :post, local: true, html: { class: "registration-form" } do |f| %>
          <div class="form-group mt-3">
            <div class="input-group input-group-outline my-3">
              <label class="form-label">Email</label>
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.text_field :email, class: "form-control" %>
            </div>

          <div class="form-group mt-3">
            <div class="input-group input-group-outline my-3">
              <label class="form-label">Password</label>
                <%= f.label :password, "Password", class: "form-label" %>
                <%= f.password_field :password, class: "form-control" %>
            </div>
          </div>

          <div id="login">
            <div class="form-group mt-4">
              <div class="d-grid">
                <%= f.submit "Login", class: "btn btn-primary btn-block" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="form-group mt-4">
        <div class="d-grid justify-content-center">
          <%= button_to "Login with Google", '/auth/google_oauth2', class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>