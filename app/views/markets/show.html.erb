<% if @market.present? %>
<%= @market.market.name %> <br>
<p>
  Address: <%= @market.market.address %> <br>
  Site: <%= @market.market.site %> <br>
  Location Description: <%= @market.market.description %> <br>
  FNAP: <%= @market.market.fnap %> <br>
  SNAP: <%= @market.market.snap_option %> <br>
  Accepted Payments: <%= @market.market.accepted_payment %> <br>
</p>
  <%="Find Route For:" %> <br>
  <% if user_signed_in? %>
    <% if current_user.favorites.include?(@market[:id].to_i) %>
      <%= button_to "Remove from Favorites", remove_from_favorites_market_path(@market[:id]), method: :delete, remote: true %>
    <% else %>
      <%= button_to "Add to Favorites", add_to_favorites_market_path(@market[:id]), method: :patch, remote: true %>
    <% end %>
  <% else %>
    <%= link_to "Sign in to add to favorites", login_path %>
  <% end %>
<% else %>
  <p>Market not found.</p>
<% end %>
