<div class="container">
  <div class="col d-flex justify-content-center"><h2>Closest Farmer's Markets</h2></div>
  <div class="row">
    <% @markets.each do |market| %>
      <div class="col-lg-4 col-md-6 mb-4 d-flex justify-content-center">
        <div class="card bg-gradient-light my-3" style="min-width:400px">
          <div class="card-body">
            <div class="d-flex justify-content-center text-center">
              <%= link_to market.name, market_path(market.id, original_lat: params[:original_lat], original_lon: params[:original_lon]), method: :get, class: "btn btn-outline-primary me-2 btn-lg" %>
            </div>
            <div class="d-flex justify-content-center">
              Snap Option: <%= market.snap %>
            </div>
          </div>
          <div class="card-footer text-center">
            <div class="d-flex justify-content-center">
              <%= market.address %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </body>
</div>